---
permalink: "assets/css/print/layout.css"
eleventyExcludeFromCollections: true
---

/* ===== BASE PAGE LAYOUT ===== */
@page {
    /* Grid Variables */
    --g-column-count: 1;
    --g-column-offset: 0;
    --g-column-gutter: 3mm;
    --g-row-count: 1;
    --g-row-offset: 0;
    --g-row-gutter: 3mm;

    /* Page Configuration */
    size: {{ config.width }}mm {{ config.height }}mm;
    
    /* Margins */
    margin-top: {{ config.margin_top }}mm;
    margin-bottom: {{ config.margin_bottom }}mm;
    margin-left: {{ config.margin_left }}mm;
    margin-right: {{ config.margin_right }}mm;

    /* Print Options */
    {% if config.bleed %}bleed: 6mm;{% endif %}
    {% if config.marks %}marks: crop;{% endif %}

    /* Footnotes */
    @footnote {
        float: bottom;
    }
}

/* ===== LEFT/RIGHT PAGE MARGINS ===== */
@page:left {
    margin-top: {{ config.page_left_margin_top }}mm;
    margin-bottom: {{ config.page_left_margin_bottom }}mm;
    margin-left: {{ config.page_left_margin_left }}mm;
    margin-right: {{ config.page_left_margin_right }}mm;
}

@page:right {
    margin-top: {{ config.page_right_margin_top }}mm;
    margin-bottom: {{ config.page_right_margin_bottom }}mm;
    margin-left: {{ config.page_right_margin_left }}mm;
    margin-right: {{ config.page_right_margin_right }}mm;
}

/* ===== PAGE NUMBERS (FOLIOS) ===== */
@page:left {
    @left-top {
        content: counter(page);
        text-align: left;
        margin-left: 10mm;
        font-family: var(--note);
        font-size: var(--labeur-size);
        display: var(--folio, block);
    }
}

@page:right {
    @right-top {
        content: counter(page);
        text-align: right;
        margin-right: 10mm;
        font-family: var(--note);
        font-size: var(--labeur-size);
        display: var(--folio, block);
    }
}

/* ===== SPECIALIZED PAGE LAYOUTS ===== */

/* Clean Layout - No Page Numbers */
@page clean {
    @left-top {
        display: none;
    }
    
    @right-top {
        display: none;
    }
}


.nofolio{
    page: clean;
}


/* Table of Contents Layout */
@page sommaire {
    margin: 10mm !important;

    @left-top {
        display: none;
    }
    
    @right-top {
        display: none;
    }
}

/* Modular Grid Layout */
@page modularGrid {
    margin: 10mm !important;

    @left-top {
        display: none;
    }
    
    @right-top {
        display: none;
    }

}

